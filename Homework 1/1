/*Вывести двоичное представление целого положительного числа,
используя битовые операции (число вводится с клавиатуры).*/
#include <stdio.h>
int main(void) {  
  int i=1;
  int N=0; 
  scanf("%d",&N);
  while(i<N) { 
    i=i<<1;
  }    
  i=i>>1;
  while(i>=1) {	
  if(N-i>=0) {
    printf("%d",1);
    N=N-i;
  } else {
    printf("%d",0);
  }
    i=i>>1;
  }
  return 0;
}
