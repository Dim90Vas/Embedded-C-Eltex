#include <stdio.h>
#include <string.h>
struct abonent {
    char name[10];
    char second_name[10];
    char tel[10];
};

void add_ab(struct abonent *,char count);
void del_ab(struct abonent *);
void find_ab(struct abonent *,char count);
void all_enter(struct abonent *,char count);

int main(void) {
    struct abonent arr[100];
    int action;
    char x=1;
    char count=0;
    while(x==1) {
        printf("1. Add a subscriber\n");
        printf("2. Delete a subscriber\n");
        printf("3. Find a subscriber\n");
        printf("4. Show all\n");
        printf("5. Close\n");
        scanf("%d",&action);
        switch(action) {
            case 1:
                add_ab(arr,count);
                ++count;
                break;
            case 2:
                del_ab(arr);
                break;
            case 3:
                find_ab(arr,count);
                break;
            case 4:
                all_enter(arr,count);
                break;
            case 5:
                x=2;
                break;
            }
    }

    return 0;
}

void add_ab(struct abonent *arr,char count) {
    printf("Enter name: ");
    scanf("%s",(arr+count)->name);
}

void del_ab(struct abonent *arr) {
    printf("2");
}

void find_ab(struct abonent *arr,char count) {
    char find_name[10];
    printf("Find name: ");
    scanf("%s",find_name);
    int len=strlen(find_name);
    int t=0;
    for(int i=0;i<2;++i) {
        for(int j=0;j<10;++j) {
            if(((arr+i)->name)[j]!=0&&find_name[j]==((arr+i)->name)[j]) {
                t=j;
                if(t+1==len) {
                    printf("%s ",((arr+i)->name));
                }
            }    
        }
    }   
}

void all_enter(struct abonent *arr,char count) {
    for(int i=0;i<count;++i) {
        printf("%s\n",(arr+i)-> name);
    }
}
