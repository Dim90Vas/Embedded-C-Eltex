#include <stdio.h>
#include <string.h>
struct abonent {
    char name[10];
    char second_name[10];
    char tel[10];
};

void add_ab(struct abonent *,char count);
void del_ab(struct abonent *);
int* find_ab(struct abonent *,int *,char count);
void all_enter(struct abonent *,char count);

int main(void) {
    struct abonent arr[10];
    int action;
    char x=1;
    char count=0;
    while(x==1) {
        printf("1. Add a subscriber\n2. Delete a subscriber\n3. Find a subscriber\n4. Show all\n5. Close\n");
        scanf("%d",&action);
        switch(action) {
            case 1:
                add_ab(arr,count);
                ++count;
                break;
            case 2:
                del_ab(arr);
                break;
            case 3:
                static int mass[10];
                find_ab(arr,mass,count);
                int i=0;
                do {
                    printf("%s\n",(arr+mass[i])->name);
                    ++i; 
                } while(i<10&&mass[i]!=0);
                printf("\n");
                for(int i=0;i<10;++i) {
                   mass[i]=0;
                }
                break;
            case 4:
                all_enter(arr,count);
                break;
            case 5:
                x=2;
                break;
            }
    }

    return 0;
}

void add_ab(struct abonent *arr,char count) {
    printf("Enter name: ");
    scanf("%s",(arr+count)->name);
}
void del_ab(struct abonent *arr) {
    printf("2");
}

int* find_ab(struct abonent *arr,int *mass,char count) {
    char find_name[10];
    int index=0;
    printf("Find name: ");
    scanf("%s",find_name);
    int i=0;
    while(i<count) {
        for(int j=0;j<10;++j) {
            if(strlen(find_name)==strlen((arr+i)->name)) {
                if(find_name[j]==((arr+i)->name)[j]&&((arr+i)->name)[j]!=0) {
                    if(strlen(find_name)==j+1) {
                    mass[index]=i;
                    ++index;
                    }
                }
            }
        }
        
        ++i;
    }
    return mass;
}

void all_enter(struct abonent *arr,char count) {
    for(int i=0;i<count;++i) {
        printf("%s\n",(arr+i)->name);
    }
}

